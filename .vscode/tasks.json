{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build C++ Target",
            "command": "/usr/bin/g++",
            "args": [
                "-w",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "Build uring",
            "command": "/usr/bin/gcc",
            "args": [
                //"-Wno-incompatible-pointer-types", // Disable -Wincompatible-pointer-types warning
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "${file}", 
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                //"`pkg-config --cflags --libs liburing`"
                "-luring"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "Build echo server",
            "command": "/usr/bin/g++",
            "args": [
                "-I", "./",
                "-w",
                "-fdiagnostics-color=always",
                "-g",
                "./TCPchannel/EventLoop.cc",
                "./TCPchannel/Channel.cc",
                "./TCPchannel/Ring.cc",
                "${file}", 
                "-o",
                "${workspaceFolder}/build/echo_server",
                "-luring"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}