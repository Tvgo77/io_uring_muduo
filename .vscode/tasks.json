{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Target",
            "command": "/usr/bin/gcc",
            "args": [
                "-I", ".",
                "-I", "../include/",
                "-w",
                "-fdiagnostics-color=always",
                // "-pthread",
                "-g",
                "${file}", "../src/csapp.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lpthread",
                "`pkg-config --cflags --libs glib-2.0`"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "Build uring",
            "command": "/usr/bin/gcc",
            "args": [
                //"-Wno-incompatible-pointer-types", // Disable -Wincompatible-pointer-types warning
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "${file}", 
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                //"`pkg-config --cflags --libs liburing`"
                "-luring"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}